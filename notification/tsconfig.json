{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "outDir": "dist",
    "target": "es6",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react" // Add this line to enable JSX support
  },
  "compileOnSave": true
}
